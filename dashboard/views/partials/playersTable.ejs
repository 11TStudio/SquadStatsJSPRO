async function removePlayer(data) {
    gaugePlayers.setValueAnimated(gaugePlayers.getValue() - 1, 2);
    let table;
    let rows;
    switch (data?.teamID) {
        case "1":
            table = 1;
            rows = document.querySelectorAll("#team1_players tr");
            break;
        case "2":
            table = 2;
            rows = document.querySelectorAll("#team2_players tr");
    }
    
    if (!data?.steamID ) return updatePlayers();
    rows.forEach(async (row) => {
        if (row.id === data?.steamID) {
            return (table === 1) ? (await tablePlayers1.row(row).remove().draw()) : (await tablePlayers2.row(row).remove().draw());
        }
    })
}

